<h2> Add A New Dog!</h2>

<form id="newDogForm" class="col-xs-12 col-md-4">

  <label for="dogName">Name: </label>
  <input type="text" class="form-control" name="name" id="dogName" value="<%= dog.escape('name') %>">


  <label for="dogAge">Age: </label>
  <input type="text" class="form-control" name="age" id="dogAge"  value="<%= dog.escape('name') %>">

  <label for="dogDescription">Description:</label>
  <input type="textarea" class="form-control" name="description" id="dogDescription" value="<%= dog.escape('name') %>">

  <label for="dogSize">Size:</label>
  <select name="size" id="dogSize">

    <option <%= (dog.escape('size') === 'small') ? 'selected' : '' %> value='small'>Small</option>
    <option <%= (dog.escape('size') === 'small') ? 'selected' : '' %> value='medium'>Medium</option>
    <option <%= (dog.escape('size') === 'small') ? 'selected' : '' %> value='large'>Large</option>
  </select>
  <br>

  <label for="addPic">Add A Picture of Your Dog:</label>
  <br>
  <input type="file" name="dog_photo" id="addPic">

  <br>
  <br>
  <button type='submit' class='addSubmit btn btn-primary'>Add Dog</button>



</form>
