
<% sitters.each(function(sitter){ %>
  <div class="row">
    <!-- <div class="sitter-info"> -->
    <div class="sitterItem col-xs-12">
      <div class="row">
        <div class = 'col-xs-8'>
          <h4><%= sitter.escape('sitter_name') %></h4>
          <ul>
            <li><p><%= sitter.escape('description') %></p></li>
            <li>Cost per Night:<%= sitter.escape('price') %></li>
        </div>
        <div class="sitterIndexImg col-xs-2 col-xs-offset-1">
          <img src="<%= sitter.get('sitter_photo_small') %>">
          <br>
          <div class="sitterInfoButton">
            <button style="margin-top: 10px; margin-left:10%;" data-id="<%= sitter.get('id') %>" class="btn btn-success moreInfo">More Info</button>
          </div>
        </div>
      </div>
    </div>

    <!-- <div class="sitter-pic"> -->

  </div>
<% }); %>
