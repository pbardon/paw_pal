<% if (sitter.get('sitter_name')) { %>
  <h2>Edit Sitter Information</h2>

<% } else { %>

  <h2> Enter Your Information To Become A Sitter!</h2>

<% } %>

<form id="newSitterForm" class="col-xs-12 col-md-4">

  <label for="sitterName">Sitter Profile Name: </label>
  <input
    type="text"
    class="form-control"
    name="sitter_name"
    id="sitterName"
    value="<%= sitter.escape('sitter_name') %>">

  <label for="sitterDescription">Description:</label>
  <input
    type="textarea"
    class="form-control"
    name="description"
    id="sitterDescription"
    value="<%= sitter.escape('description') %>">

  <label for="sitterPrice">Price Per Night: </label>
  <input
      type="text"
      class="form-control"
      name="price"
      id="sitterPrice"
      value="<%= sitter.escape('price') %>">



  <label>Able to Sit Dogs of Size:</label>

    <input type = "checkbox" <%= (sitter.get('small') === true) ? 'checked' : '' %>
      class = "checkbox"
      name = "small"
      value="true">Small<br>
    <input type = "checkbox" <%= (sitter.get('small') === true) ? 'checked' : '' %>
      class = "checkbox"
      name="medium"
      value="true">Medium<br>
    <input type = "checkbox" <%= (sitter.get('small') === true) ? 'checked' : '' %>
      class = "checkbox"
      name="large"
      value="true">Large<br>

    <label for="sitterAddress">Street Address:</label>
    <input
        type="text"
        class="form-control"
        name="street_address"
        id="sitterAddress"
        value="<%= sitter.escape('street_address') %>">

    <label for="sitterCity">City:</label>
    <input
        type="text"
        class="form-control"
        name="city"
        id="sitterCity"
        value="<%= sitter.escape('city') %>">

    <label for="sitterCity">State:</label>
    <input
        type="text"
        class="form-control"
        name="state"
        id="sitterState"
        value="<%= sitter.escape('state') %>">

      <label for="sitterZip">Zipcode:</label>
      <input
          type="text"
          class="form-control"
          name="zipcode"
          id="sitterZip"
          value="<%= sitter.escape('zipcode') %>">



  <br>
  <% if (!sitter.get('sitter_photo')) { %>

    <label for="addPic">Change Sitter Profile Picture:</label>
    <br>
    <input
      type="file"
      name="sitter_photo"
      id="addPic">


  <% }else { %>

    <label for="addPic">Add A Sitter Profile Picture:</label>
    <br>
    <input
      type="file"
      name="sitter_photo"
      id="addPic">

  <% } %>


  <br>
  <br>

  <% if (sitter.get('id')) { %>
    <button type='submit' class='addSubmit btn btn-primary'>Update Information</button>
  <% }else { %>
    <button type='submit' class='addSubmit btn btn-primary'>Create Sitter Profile!</button>
  <% } %>
</form>
